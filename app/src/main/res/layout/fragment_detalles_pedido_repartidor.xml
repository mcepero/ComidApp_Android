<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetallesPedidoRepartidor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detallesPedidoRepartidorDireccion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="28dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="DirecciÃ³n" />



            <TextView
                android:id="@+id/detallesPedidoRepartidorFecha"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:text="Fecha" />




        <TextView
            android:id="@+id/detallesPedidoRepartidorPrecio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:text="Precio" />

        <TextView
            android:id="@+id/detallesPedidoRepartidorEstado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:text="Estado: " />


        <Spinner
            android:id="@+id/detallesPedidoRepartidorListaEstados"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_marginTop="10dp"></Spinner>

        <Button
            android:id="@+id/detallesPedidoRepartidorBoton"
            android:layout_marginTop="20dp"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Actualizar estado"></Button>

    </LinearLayout>

</FrameLayout>